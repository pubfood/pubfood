{
  "ecmaFeatures": {
    "blockBindings": true,
    "forOf": true,
    "jsx": false,
    "arrowFunctions": false,
    "modules": true
  },
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    // 0 = allow
    // 1 = warn
    // 2 = fail
    "strict": 0,
    "eqeqeq": [2, "allow-null"],
    "semi": 2,
    "indent": [2, 2],
    "comma-spacing": [2, {"before": false, "after": true}],
    "arrow-parens": 1,
    "valid-jsdoc": 0,
    "no-unused-vars": 1,
    "no-dupe-args": 2,
    "no-dupe-keys": 2,
    "no-empty": 2,
    "no-undef": 2,
    "no-undefined": 0,
    "quotes": [2, "single"]
  }
}
